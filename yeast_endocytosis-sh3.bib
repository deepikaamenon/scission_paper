pmid = {9778343},
title = {{RT Loop Flexibility Enhances the Specificity of Src Family SH3 Domains for HIV-1 Nef {\textless}sup{\textgreater}†{\textless}/sup{\textgreater} {\textless}sup{\textgreater},{\textless}/sup{\textgreater} {\textless}sup{\textgreater}‡{\textless}/sup{\textgreater}}},
