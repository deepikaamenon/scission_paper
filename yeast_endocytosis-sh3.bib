doi = {10.1016/S0960-9822(03)00383-X},
file = {:Users/deepikaa/Library/Application Support/Mendeley Desktop/Downloaded/Rodal et al. - 2003 - Negative Regulation of Yeast WASp by Two SH3 Domain-Containing Proteins.pdf:pdf;:Users/deepikaa/Library/Application Support/Mendeley Desktop/Downloaded/PK53ZQ3U/S096098220300383X.html:html},
